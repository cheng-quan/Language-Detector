#include "TriFreq.h"

TriFreq::TriFreq( const char* iTriFileName, const char* iFreqFileName ) 
	: mTrigram(), mFreqWords()
{
	mTrigram.load( iTriFileName );
	mFreqWords.load( iFreqFileName );
}

TriFreq::~TriFreq()
{
}

float TriFreq::similarity( const ::std::string& iMessage )
{
	return mTrigram.similarity(iMessage) + mFreqWords.similarity(iMessage)*5;
}

